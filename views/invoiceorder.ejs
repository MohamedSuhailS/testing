<body>
  <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
    <p class="h5 my-0 me-md-auto fw-normal"><img src="image/log.png" alt="" width="90"></p>
    <nav class="my-2 my-md-0 me-md-3">
      <a class="p-2 text-dark" href="/">Home</a>
      <a class="p-2 text-dark" href="/login">Login</a>
      <a class="p-2 text-dark" href="/register">Register</a>
    </nav>
  </header>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-12">
      <table class="table">
        <thead>
          <tr  style="margin: 15px;">
            <th scope="col">#</th>
            <th scope="col">Order Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Order Value</th>
          </tr>
        </thead>
        <tbody>
      <%  var juice = ' '; %>
      <%  var total = 0; %>
      <%  var rows = 1; %>
        <% for(var i = 0; i< orders.totalSize; i++) { %>
            <% if(orders.records[i]['orderid__c'] != orderid) {%>   
                <% var orderid =  orders.records[i]['orderid__c']; %>
                <tr>
                  <th scope="row"><%= rows %></th>
                  <%var rows = rows+1; %>
                  <td><%= orderid %></td>                
               <% for(var j = 0; j< orders.totalSize; j++) { %>
                 <% if(orders.records[j]['orderid__c'] == orderid) {%>   
                 <%var juice = orders.records[j]['Name']; %>
                <% var total =  total + orders.records[j]['totalprice__c']; %>
                <% } %>
               <% } %>  
               <td><%= juice %></td>
               <td><%= total %></td>
               <td><a href="/invoicedetails/<%= orderid%>" ><span style="margin: 15px;"><i  style="margin: 5px;" class="fa-solid fa-eye"></i>View</span></a><a href=""><span><i  style="margin: 5px;" class="fa-solid fa-eye"></i>Delete</span></a></td>
                </tr>
            <% var total =  0 ; %>
                <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
      </div>
