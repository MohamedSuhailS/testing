<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="css/main.css">
  <title>Login Page</title>
</head>
<body>
  <style>
   h4,table,tr,th,td{font-size: 15px;color: white;}
  </style>
  <header class="header">
    <a href="/" class="logo"><img src="image/log.png" alt=""></a>
    <nav class="navbar">
        <a href="/">home</a>
        <a href="#about">about</a>
        <a href="#products">suhail</a>
        <a href="#contact">contact</a>
    </nav>
    <div class="icons">
        <div class="fas fa-search" id="search-btn"></div>
     <a href="/cartpage"><div class="fas fa-shopping-cart" id="cart-btn"><span style="font-size:18px;border-radius:50%;border:1px solid white;padding:2px;margin-left:3px;position:relative;top:-10px;left:3px;"><%= title %></span></div></a>
     <a href="/user"><div class="fa-solid fa-user-check" id="cart-btn"><span style="font-size:16px;padding:2px;margin-left:3px;position:relative;top:-10px;left:3px;"><%= cusname %></span></div></a>     
     <div class="fas fa-bars" id="menu-btn"></div>

    </div>

    <div class="search-form">
        <input type="search" id="search-box" placeholder="search product here...">
        <label for="search-box" class="fas fa-search"></label>
    </div>
</header>
  <div class="container " style="margin-top: 150px;">
    <div class="row justify-content-center mt-5">
      <div class="col-md-12">
          <h4 class="mb-4"><b>Order List</b></h4>
          <h4 class="mb-4"><b>Customer Name : <%= cusname%></b></h4>
      <table class="table">
        <thead>
          <tr  style="margin: 15px;">
            <th scope="col">#</th>
            <th scope="col">Order Number</th>
            <th scope="col">Order Date</th>
            <th scope="col">Total Price</th>
          </tr>
        </thead>
        <tbody>
        <%  var orderid = 1; %>
        <%  var total = 0; %>
        <%  var rows = 1; %>
        <% for(var i = 0; i< orders.length; i++) { %>
            <tr>
                  <% if(orders[i]['orderid__c'] != orderid) {%>   
                     <% var orderid =  orders[i]['orderid__c']; %>
                  <th scope="row"><%= rows %></th>
                  <%var rows = rows+1; %>
                     <td><%= orderid %></td>                 
                     <td><%= orders[i]['CreatedDate'] %></td>   
                     <% for(var j = 0; j< orders.length; j++) { %>
                    <% if(orders[j]['orderid__c'] == orderid) {%>   
                    <% var total =  total + orders[j]['totalprice__c']; %>
                    <% } %>
                    <% } %>
                     <td><%= total %></td>                 
                     <td><a href="/invoicedetails/<%= orderid%>" ><span style="margin: 15px;"><i  style="margin: 5px;" class="fa-solid fa-eye"></i>View Invoice</span></a></td>
                    <%  var total = 0; %>
                    <% } %>
                </tr>
            <% } %>
          </tbody>
        </table>
       </div>
    </div>
      </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</body>
</html>